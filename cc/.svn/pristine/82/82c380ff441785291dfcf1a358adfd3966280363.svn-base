body{background:#d1e2c5;color:#333;font-family:"微软雅黑",Arial,Helvetica,sans-serif;font-size:12px;margin:0px auto;padding:0px;cursor:url(../images/Arrow.cur),auto;}.xuehua{background:url(images/xuehua.gif);position: absolute;top:0;left:0;z-index:1;right: 0;width:100%;height:220px;}

.header{width:100%;background:#d1e2c5 url(../images/head_bg.jpg) repeat-x fixed top center;}
.header .head{width:1200px;margin:0 auto;height:220px; position:relative;z-index:3;}
.head .text{float:right;font-family:"宋体";font-size:13px;color:#fff;text-shadow:#000 1px 1px 1px;line-height:28px;width:320px;margin:55px 0 0;filter:glow(color=black,strength=1);}
.head .text:hover{-webkit-animation-name:jello;animation-name:jello;}
.head h1{float:left;background:url(../images/logo.png) no-repeat;text-indent:-9999em;width:384px;height:55px;margin:85px 0 0 10px;}
.head h1 a{width:384px;height:55px;display:block;}
.head h1:hover{-webkit-animation-name:swing;animation-name:swing;}
/*menu*/
.header .menu{border-top:4px solid #8aa653;width:100%;height:42px;line-height:42px;background:url(../images/menubg.png);box-shadow:1px 1px 2px rgba(0,0,0,0.3);}
.menu ul{width:1200px;height:42px;margin:0 auto;position:relative;}
.menu ul li{float: left;background: url(../images/line1.gif) no-repeat right;}
.menu ul li a{color:#4d4d4b;font-family:"Microsoft Yahei", Arial;font-size:14px;padding:0 26px;display:block;height: 39px;}
.menu ul li a:hover{background-color:#8aa653;color:#fff; text-decoration:none}
.menu ul li a.current{background-color:#8aa653;color:#fff;}
.menu .sub-nav{position:absolute;z-index:99999;display:none;width:auto;border-bottom-left-radius:4px;border-bottom-right-radius:4px;-webkit-animation-duration:1s;animation-duration:1s;-webkit-animation-fill-mode:both;animation-fill-mode:both;}
.menu .sub-nav li{float:none;background:none;}
.menu .sub-nav li a{background:#8aa653;color:#fff;}
.menu .sub-nav li a:hover{background:#99B85D;}
/*search*/
.menu ul .search{position:absolute;right:0;top:5px;}
.search .text{float:left;background:url(../images/search.png) no-repeat 0 6px;height:30px;padding-left:17px;opacity:0.8;border:1px solid #9cc;line-height:26px;color:#666;}
.search .text:focus{outline:none;color:#000;}
.search .submit{float:left;width:60px;height:32px;border:0;background:#8aa653;color:#fff;cursor:pointer;line-height: 32px;}
.search .submit:hover{background:#09c;}