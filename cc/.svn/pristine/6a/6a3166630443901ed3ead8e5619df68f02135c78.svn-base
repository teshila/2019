package com.ly.email;

import java.io.File;
import java.io.IOException;
import java.util.List;

import javax.mail.MessagingException;

import com.ly.pojo.Stock;

public class MailSenderTool{
	
	
	
	public static void creatTemplate(String to,String title,List<Stock>  stocks){
		StringBuffer sb1 = new StringBuffer();
		sb1.append("<table>");
		for (Stock sts : stocks) {
			sb1.append("<tr><td>"+sts.getCode()+"</td><td>"+sts.getName()+"</td></tr>");
		}
		sb1.append("</table>");
		try {
			EmailUtil.sendEmail( to,title, sb1.toString(), true);
		} catch (IOException | MessagingException e) {
			e.printStackTrace();
		}
		
	}
}
